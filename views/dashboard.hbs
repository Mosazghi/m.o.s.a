<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='icon' type='image/x-icon' href='/images/robot.jpg' />
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css'
      integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='./styles/styles.css' />
    <link rel='stylesheet' href='./styles/drop-buttons.css' />
    <title>M.O.S.A</title>
  </head>
  <body>
    <header>
      <h1 class='tittel'>PROJECT M.O.S.A. | Dashboard </h1>
      <h3 style='text-align: center;'>Velkommen tilbake {{username}}!</h3>
      <h5 style='text-align: center;'><a href='/user/logut'>Logg ut?</a></h5>
    </header>
    <main>
      <div class='topdown-conatiner'>
        <div class='wrapper'>
          <h2>Velg destinasjon</h2>
          <div id='topdown' class='topdown'>
            <div class='drop-button-wrapper'>
              <button class='drop-button' id='drop-sted1' title='1'>Drop 1</button>
              <button class='drop-button' id='drop-sted2' title='2'>Drop 2</button>
              <button class='drop-button' id='drop-sted3' title='3'>Drop 3</button>
              <button class='drop-button' id='drop-sted4' title='4'>Drop 4</button>
            </div>
          </div>
        </div>
        <div class='container'>
          <div class='send-wrapper'>
            <select
              name='drop-sted'
              class='form-select'
              id='drop-sted'
              title='Velg dropsted'
            >
              <option selected>Velg dropsted</option>
              <option value='1'>1</option>
              <option value='2'>2</option>
              <option value='3'>3</option>
              <option value='4'>4</option>
            </select>
            <select
              class='form-select'
              name='komponent'
              id='komponent'
              title='Velg komponent'
            >
              <option selected>Velg komponent</option>
            </select>
            <input
              class='number'
              name='antall'
              id='antall'
              type='number'
              placeholder='Velg antall...'
              title='Velg antall'
              min='1'
            />
            <button
              class='btn'
              id='legg-mer-button'
              title='Legg til i bestillingen'
            >+</button>
          </div>
          <table class='table' id='liste'>
            <thead>
              <tr>
                <th>Komponent</th>
                <th>Antall</th>
              </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
          <button type='submit' class='btn btn-danger' id='bestill-button'>
            Bestill</button>
        </div>
      </div>
    </main>
    <footer>
      <div class='copyright'>&copy; 2023 M.O.S.A.</div>
      |
      <div class='logo'>
        <a href='https://github.com/Mosazghi/m.o.s.a' target='_blank'>
          <img
            src='./images/github-logo.png'
            alt='github'
            width='30px'
            height='30px'
          /></a>
      </div>
    </footer>
    <script src='./app.js'></script>
  </body>
</html>