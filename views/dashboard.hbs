<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='icon' type='image/x-icon' href='/images/robot.jpg' />
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css'
      integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='./styles/styles.css' />
    <link rel='stylesheet' href='./styles/drop-buttons.css' />
    <title>M.O.S.A</title>
  </head>
  <body>
    <header>
      <h1 class='tittel'>PROJECT M.O.S.A. | Hi {{username}}, {{pass}} </h1>
    </header>
    <main>
      <div class='topdown-conatiner'>
        <div class='wrapper'>
          <h2>Velg destinasjon</h2>
          <div id='topdown' class='topdown'>
            <div class='drop-button-wrapper'>
              <button class='drop-button' id='drop-sted1'>Drop 1</button>
              <button class='drop-button' id='drop-sted4'>Drop 4</button>
              <button class='drop-button' id='drop-sted2'>Drop 2</button>
              <button class='drop-button' id='drop-sted3'>Drop 3</button>
            </div>
          </div>
        </div>
        <div class='container'>
          <div class='send-wrapper'>
            <select class='form-select' name='drop-sted' id='drop-sted'>
              <option selected>Velg dropsted</option>
              <option value='drop-sted1'>drop-sted1</option>
              <option value='drop-sted2'>drop-sted2</option>
              <option value='drop-sted3'>drop-sted3</option>
              <option value='drop-sted4'>drop-sted4</option>
            </select>
            <select class='form-select' name='komponent' id='komponent'>
              <option selected>Velg komponent</option>
              <option value='2k Motstand'>2k Motstand</option>
              <option value='3k Motstand'>3k Motstand</option>
              <option value='4k Motstand'>4k Motstand</option>
            </select>
            <input
              class='number'
              name='antall'
              id='antall'
              type='number'
              placeholder='Velg antall...'
              {{! min='1'
              max='5' }}
            />
            <button class='btn' id='legg-mer-button'>+</button>
          </div>
          <table class='table' id='liste'>
            <thead>
              <tr>
                <th>komponent</th>
                <th>Antall</th>
              </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
          <button class='btn btn-danger' id='bestill-button'> Bestill</button>
        </div>
      </div>
    </main>
    <footer>
      <div class='copyright'>&copy; 2023 M.O.S.A.</div>
      |
      <div class='logo'>
        <a href='https://github.com/Mosazghi/m.o.s.a' target='_blank'>
          <img
            src='./images/github-logo.png'
            alt='github'
            width='30px'
            height='30px'
          /></a>
      </div>
    </footer>
    <script src='./app.js'></script>
  </body>
</html>